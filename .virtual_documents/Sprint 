from Game import *





def valid_moves(state,player):
    return ["hit","stand"]


def initial_state():

    # State
    # deck
    # hand player 1
    # hand player 2
    # player 1 standing
    # player 2 standing
    # last card player 1
    # last card player 2

    deck=makedeck(1)
    hand1=deck.deal(2)
    hand2=deck.deal(2) 
    standing1=False
    standing2=False    
    last_card1=None
    last_card2=None

    state=deck,hand1,hand2,standing1,standing2,last_card1,last_card2

    return state


def score(hand):

    total=0
    has_ace=False
    for card in hand:
        if card.rank==1:
            has_ace=True
            
        if card.rank>10:
            total=total+10
        else:
            total=total+card.rank

    if has_ace:
        if total+10<=21:
            total=total+10
    
    return total
    


score([Card(1,'C'),Card(1,'C'),Card(8,'C'),Card(2,'C')])


deck,hand1,hand2,standing1,standing2,last_card1,last_card2=initial_state()
print(hand1,score(hand1))
print(hand2,score(hand2))


def win_status(state,player):
    deck,hand1,hand2,standing1,standing2,last_card1,last_card2=state

    score1=score(hand1)
    score2=score(hand2)
    visible_score1=score(hand1[1:])
    visible_score2=score(hand2[1:])

    if standing1 and standing2:
        if player==1:
            if score1>score2:
                return 'win'
            elif score1==score2:
                return 'stalemate'
            else:
                return 'lose'

        elif player==2:
            if score1>score2:
                return 'lose'
            elif score1==score2:
                return 'stalemate'
            else:
                return 'win'
        else:
            raise ValueError("You can't get there from here.")

    if player==1 and visible_score1>21:
        return "lose"

    if player==2 and visible_score2>21:
        return "lose"


    


def state_to_observation(state,player):
    
    deck,hand1,hand2,standing1,standing2,last_card1,last_card2=state

    if player==1:
        observation=hand1,hand2[1:],standing1,standing2,last_card1,last_card2
    else:
        observation=hand2,hand1[1:],standing2,standing1,last_card2,last_card1
        

    return observation  # what an agent actually sees


def update_state(state,player,move):
    deck,hand1,hand2,standing1,standing2,last_card1,last_card2=state

    if move=='stand':
        if player==1:
            standing1=True

        if player==2:
            standing2=True
            
    elif move=='hit':
        card=deck.deal(1)[0]
        if player==1:
            hand1+=[card]
            last_card1=card
        if player==2:
            hand2+=[card]
            last_card2=card
        
    else:
        raise ValueError("You can't get there from here.")

    new_state=deck,hand1,hand2,standing1,standing2,last_card1,last_card2
    return new_state



def show_state(observation):
    print(observation)
    my_hand,your_hand,me_standing,you_standing,my_last_card,your_last_card=observation
    print(f"My hand {my_hand} and {me_standing}")
    print(f"Your hand {your_hand} and {you_standing}")    










